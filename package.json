{
  "name": "react-use-echarts",
  "private": false,
  "version": "1.0.2",
  "description": "A powerful React hooks library for Apache ECharts",
  "keywords": [
    "react",
    "hooks",
    "echarts",
    "charts",
    "data-visualization",
    "typescript",
    "themes",
    "lazy-loading",
    "chart-linkage",
    "resize-observer"
  ],
  "type": "module",
  "author": "Ethan",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chensid/react-use-echarts.git"
  },
  "homepage": "https://github.com/chensid/react-use-echarts#readme",
  "bugs": {
    "url": "https://github.com/chensid/react-use-echarts/issues"
  },
  "sideEffects": false,
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "prepare": "pnpm build",
    "typecheck": "tsc -b"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "babel-plugin-react-compiler": "^1.0.0",
    "baseline-browser-mapping": "^2.9.15",
    "echarts": "^6.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "npm:rolldown-vite@7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "echarts": "^6.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.3.1"
    }
  }
}
