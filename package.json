{
  "name": "react-use-echarts",
  "private": false,
  "version": "0.0.7",
  "description": "A powerful React hooks library for Apache ECharts",
  "keywords": [
    "react",
    "hooks",
    "echarts",
    "charts",
    "data-visualization",
    "typescript"
  ],
  "type": "module",
  "author": "chin",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chensid/react-use-echarts.git"
  },
  "homepage": "https://github.com/chensid/react-use-echarts#readme",
  "bugs": {
    "url": "https://github.com/chensid/react-use-echarts/issues"
  },
  "sideEffects": false,
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "prepare": "pnpm build",
    "typecheck": "tsc -b"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "3.0.2",
    "echarts": "^5.6.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.2"
  },
  "peerDependencies": {
    "echarts": "^5.5.1",
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0"
  }
}
